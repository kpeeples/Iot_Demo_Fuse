package com.redhat.demo.iot.datacenter.monitor
 
import com.redhat.demo.iot.datacenter.monitor.DataSet;

rule "TemperatureToHigh"
	when
		t : DataSet( deviceType == 1, payload > 80 )
	then
		System.out.println("Temperature to high!");
end 
 
rule "TemperatureToLow"
	when
		t : DataSet( deviceType == 1, payload < 60 )
	then
		System.out.println("Temperature to low!");
end  